#include <stdio.h>

int main() {
    int N, i, j;
    int num = 1;

    printf("Informe um número inteiro positivo: ");
    scanf("%d", &N);

    // Verificar se o número é positivo
    if (N <= 0) {
        printf("O número deve ser maior que 0!\n");
        return 1;
    }

    for (i = 1; i <= N; i++) {
        for (j = 1; j <= i; j++) {
            printf("%d ", num);
            num++;
        }
        printf("\n");
    }

    return 0;
}
