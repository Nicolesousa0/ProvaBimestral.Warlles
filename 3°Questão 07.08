#include <stdio.h>

int main() {
    int quant, num;      
    int maior = 0;        
    int contador = 0; 

    printf("Informe a quantidade de nÚmeros que você deseja digitar: ");
    scanf("%d", &quant);

    if (quant <= 0) {
        printf("A quantidade de números deve ser maior que zero.\n");
        return 1; 
    }
    for (int i = 0; i < quant; i++) {
        printf("Digite o número %d: ", i + 1); 
        scanf("%d", &num);

        if (i == 0 || num > maior) {
            maior = num;   
            contador = 1;   
        }
        else if (num == maior) {
            contador++;        
        }
    }

    printf("O maior número digitado foi: %d\n", maior);
    printf("Este número foi lido %d vezes.\n", contador);

    return 0; 
}
